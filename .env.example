# ==========================================
# Airtable Configuration (New)
# ==========================================
AIRTABLE_API_KEY=keyXXXXXXXXXXXXXX
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX

# Storage Backend: 'sheets', 'airtable', or 'hybrid'
STORAGE_BACKEND=hybrid

# SQLite Configuration
SQLITE_DB_PATH=data/trading_local.db

# Data Retention (days)
TRADE_RETENTION_DAYS=30
REWARD_SNAPSHOT_RETENTION_DAYS=7
POSITION_HISTORY_RETENTION_DAYS=30
MARKET_HISTORY_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=30

# ==========================================
# Existing Configuration
# ==========================================
# Google Sheets (legacy - still used for read-only fallback)
SPREADSHEET_URL=https://docs.google.com/spreadsheets/d/...

# Polymarket API
PK=your_private_key_here

# API Credentials (optional - will be derived from PK if not set)
API_KEY=your_api_key
API_SECRET=your_api_secret
API_PASSPHRASE=your_passphrase

# Optional: Discord webhook for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Optional: Dry run mode (set to 'true' to simulate trades)
DRY_RUN=false
